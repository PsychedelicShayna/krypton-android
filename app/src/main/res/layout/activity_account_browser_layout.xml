<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_marginStart="8dp"
android:layout_marginEnd="8dp"
android:layout_marginTop="8dp"
android:layout_marginBottom="8dp">

    <SearchView
        android:id="@+id/sv_account_search"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:queryHint="Account Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/account_browser_hdivider1"
        android:iconifiedByDefault="false"/>

    <View
        android:id="@+id/account_browser_hdivider1"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sv_account_search"
        app:layout_constraintBottom_toTopOf="@id/rv_accounts"
        android:layout_marginTop="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_accounts"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_browser_hdivider1"
        app:layout_constraintBottom_toTopOf="@+id/account_browser_hdivider_2"/>

    <View
        android:id="@+id/account_browser_hdivider_2"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_accounts"
        app:layout_constraintBottom_toTopOf="@id/btn_add_account"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btn_add_account"

        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Add Account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_browser_hdivider_2"
        app:layout_constraintBottom_toTopOf="@+id/btn_save"/>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_save_as"
        app:layout_constraintBottom_toTopOf="@+id/btn_revert_changes"/>

    <Button
        android:id="@+id/btn_save_as"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Save As"
        app:layout_constraintStart_toEndOf="@+id/btn_save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_diff"/>

    <Button
        android:id="@+id/btn_revert_changes"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Revert Changes"
        app:layout_constraintStart_toEndOf="@id/btn_diff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_set_default_vault"/>

    <Button
        android:id="@+id/btn_diff"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Diff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_revert_changes"
        app:layout_constraintBottom_toTopOf="@id/btn_security"/>

    <Button
        android:id="@+id/btn_set_default_vault"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Set Default Vault"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_security"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/btn_security"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Security"
        app:layout_constraintStart_toEndOf="@+id/btn_set_default_vault"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
